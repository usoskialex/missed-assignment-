@model bit285_lucky_number_viewmodel.ViewModels.SpinViewModel

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Lucky Number @Model.Number</title>
    <style type="text/css">
        body {
            background-color: lightgoldenrodyellow;
        }

        .spinner * {
            display: inline-block;
            font: bold 36px 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .spinner div {
            background-color: yellow;
            border: solid thin black;
            margin: 0 2px;
        }

        .register {
            font: bold 18px 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
            color: lime;
            background-color: #333;
            padding: 0 4px;
        }

        .gameover {
            font: bold 24px san-serif;
            color: darkred;
            padding: 10px;
        }
    </style>
</head>
<body>
    @using (this.Html.BeginForm())
    {
        <div class="spinner">
            @if (@Model.Balance>0)
            {
                <input type="submit" value="SPIN" />
            }
            else
            {
                <input type="submit" value="SPIN" disabled />
                @Html.ActionLink("Play Again", "Index")
            }
            <div>@Model.Spinner[0]</div><div>@Model.Spinner[1]</div><div>@Model.Spinner[2]</div>
        </div>
        <h1>Lucky Number @Model.Number</h1>
        <p>Your Current Balance is: <span class="register"> $ @Model.Balance</span></p>
        <div class="gameover">@Model.Message</div>
        if (@Model.isWinner)
        {
            <img src="~/Images/LuckySevenExercise.jpg" style="display:block" alt="coins" />
        }
    }
</body>
</html>
